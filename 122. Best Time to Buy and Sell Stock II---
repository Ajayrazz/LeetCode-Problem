class Solution {
    public int maxProfit(int[] prices) {
        int buy_price = Integer.MAX_VALUE;
        int max_profit = 0;
        for(int i=0; i<prices.length; i++){
            if(prices[i] > buy_price){
                int profit = prices[i] - buy_price;
                max_profit += profit;
                buy_price = prices[i];
            } else {
                buy_price = prices[i];
            }
        }

        return max_profit;
    }
}
